<h2 class="mx-10 my-2 font-bold text-4xl">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form h-screen', 'data-turbo': false}) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="mb-6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input w-full rounded' %>
  </div>

  <div class="mb-6">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-input w-full rounded' %>
  </div>

  <div class="mb-6">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input w-full rounded' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn-primary mb-2' %>
  </div>

  <%= render "users/shared/links" %>
<% end %>

